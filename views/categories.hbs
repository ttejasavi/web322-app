<h2>Categories</h2>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <!-- Add the new column for the remove links -->
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <td>{{this.category}}</td>
      <!-- Add the remove link -->
      <td><a href="/categories/delete/{{this.id}}" class="btn btn-danger">remove</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
